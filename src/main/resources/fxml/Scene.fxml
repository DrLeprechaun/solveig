<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="700" prefWidth="900" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leprechaun.solveig.FXMLController">
    <children>
      <TabPane layoutY="-3.0" prefHeight="510.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="DB control">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="showDatabasesButton" layoutX="54.0" layoutY="80.0" mnemonicParsing="false" onAction="#showDatabasesRequest" prefHeight="25.0" prefWidth="199.0" text="SHOW DATABASES" />
                        <Button fx:id="createDatabaseButton" layoutX="275.0" layoutY="112.0" mnemonicParsing="false" onAction="#createDatabase" prefHeight="25.0" prefWidth="199.0" text="CREATE DATABASE" />
                        <TextField fx:id="createDatabaseName" layoutX="275.0" layoutY="80.0" prefHeight="25.0" prefWidth="199.0" />
                        <Separator layoutX="262.0" layoutY="80.0" orientation="VERTICAL" prefHeight="351.0" prefWidth="2.0" />
                        <Separator layoutX="263.0" layoutY="161.0" prefHeight="3.0" prefWidth="223.0" />
                        <ChoiceBox fx:id="dropDatabaseList" layoutX="275.0" layoutY="178.0" onMousePressed="#chooseDatabasesToDrop" prefHeight="25.0" prefWidth="199.0" />
                        <Button fx:id="dropDatabaseButton" layoutX="275.0" layoutY="216.0" mnemonicParsing="false" onAction="#dropDatabase" prefHeight="25.0" prefWidth="199.0" text="DROP DATABASE" />
                        <ListView fx:id="databaseList" layoutX="54.0" layoutY="116.0" prefHeight="315.0" prefWidth="200.0" />                   
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Quering">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Connection">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                         <Label layoutX="351.0" layoutY="178.0" prefHeight="17.0" prefWidth="33.0" text="Host:" />
                        <TextField fx:id="hostField" layoutX="401.0" layoutY="174.0" />
                        <Label layoutX="351.0" layoutY="220.0" text="Port:" /> 
                        <TextField fx:id="portField" layoutX="401.0" layoutY="216.0" text="8086" />                                          
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <TextArea fx:id="outputConsole" layoutX="12.0" layoutY="543.0" prefHeight="143.0" prefWidth="878.0" />
      <Button fx:id="exitButton" layoutX="818.0" layoutY="507.0" mnemonicParsing="false" onAction="#exitApplication" prefHeight="25.0" prefWidth="68.0" text="Exit" textOverrun="CLIP" />
      <Button layoutX="14.0" layoutY="507.0" mnemonicParsing="false" onAction="#clearOutputConsole" prefHeight="25.0" prefWidth="68.0" text="Clear" />
    </children>
</AnchorPane>
